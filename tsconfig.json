{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        "strict": true,

        "declaration": true,
        "outDir": "dist",

        "forceConsistentCasingInFileNames": true,
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",

        "resolveJsonModule": true,
        "isolatedModules": true,
        "skipLibCheck": true,
    },
    "include": [
        "./sources/**/*.ts",
        "./sources/**/*.tsx",
        "./sources/**/*.mts",
    ]
}
